    <a href="<%= @ebay_search+@found_model['brake_pad_rear']+@lowest_price %>" target="_blank">ebay Lowest Price</a>
  </div>
  <div class="oil_filter">
    <img src="<%= @oil_filter_img %>" alt="">
    <h3>Engine Oil Filter</h3>
    <h3><%= @found_model['oil_filter'] %></h3>
    <a href="<%= @ebay_search+@found_model['oil_filter']+@best_match %>" target="_blank">ebay Best Match</a>
    <a href="<%= @ebay_search+@found_model['oil_filter']+@lowest_price %>" target="_blank">ebay Lowest Price</a>
  </div>  
  <div class="air_filter">
